
---
import "../styles/global.css";
---




  <!-- MAIN CONTAINER -->

    <!-- NAVBAR -->
    <header class="flex items-center justify-between px-8 py-5">
      <div class="flex items-center gap-2 font-semibold text-lg">
      
		<img src="/logo_compose.png" alt="Logo" class="w-10 h-10" />
        <span class="ml-2"> Composable Desing</span>
      </div>

      <nav class="hidden md:flex gap-8 text-sm text-gray-600">
        <a href="#">Inicio</a>
        <a href="#">Componentes</a>
        <a href="#">Resources</a>
        <a href="#">Sobre Mi</a>
      </nav>

      <div class="flex items-center gap-4">
       
    </header>




	    <!-- HERO -->
    <section class="relative px-10 py-24 bg-gray-50">

      <!-- FLOATING LEFT NOTE -->
      <img
      src="/Get_button.png"
      alt="Get Button"
      class="absolute left-6 top-20 rotate-[-4deg] w-52 shadow-md rounded-xl"
    />

      <!-- FLOATING RIGHT REMINDER -->
      <div class="absolute right-8 top-24 bg-white rounded-xl shadow-lg p-5 w-70 rotate-3">
        <h4 class="text-[10px] font-bold text-gray-400 uppercase tracking-wider mb-4">Task Progress</h4>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between mb-1">
              <span class="text-[10px] font-semibold text-gray-700">UI Design</span>
              <span class="text-[10px] font-bold text-blue-600">75%</span>
            </div>
            <div class="w-full bg-gray-100 rounded-full h-1.5">
              <div class="bg-blue-500 h-1.5 rounded-full" style="width: 75%"></div>
            </div>
          </div>
          <div>
            <div class="flex justify-between mb-1">
              <span class="text-[10px] font-semibold text-gray-700">Development</span>
              <span class="text-[10px] font-bold text-blue-600">40%</span>
            </div>
            <div class="w-full bg-gray-100 rounded-full h-1.5">
              <div class="bg-blue-400 h-1.5 rounded-full" style="width: 40%"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- CENTER CONTENT -->
      <div class="text-center max-w-3xl mx-auto">
        <div class="flex justify-center mb-6">
          <div class="w-14 h-14 bg-white rounded-xl shadow flex items-center justify-center">
            <img src="/logo_compose.png" alt="Logo" class="w-16 h-16" />
          </div>
        </div>

        <h1 class="text-5xl font-semibold leading-tight">
          Diseña apps increíbles <span class="text-blue-500">en tiempo récord</span>
          <br />
          <span class="text-gray-400 text-3xl font-normal">Componentes listos para Jetpack Compose</span>
        </h1>

        <p class="mt-6 text-gray-500">
          Optimiza tu flujo de trabajo y crea aplicaciones excepcionales con nuestra colección de componentes.
        </p>

        <button class="mt-8 px-6 py-3 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700">
          Ver componentes
        </button>
      </div>

      <!-- FLOATING BOTTOM LEFT CARD -->
      <div class="absolute left-10 bottom-12 rounded-xl p-4 w-64 rotate-[-4deg]">
       <img src="/card.png" alt="Get Button" class="w-full h-full" />
      </div>

      <!-- FLOATING BOTTOM RIGHT INTEGRATIONS -->
      <div class="absolute right-10 bottom-10 rounded-xl rotate-[-4deg] shadow-lg p-4 w-100">
       
		<img src="Nav.png" alt="Integrations" class="w-full h-full" />
      </div>

    </section>


